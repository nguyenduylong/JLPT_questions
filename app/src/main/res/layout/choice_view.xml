<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/choice1_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/choice2_button"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="10dp"
        android:textColor="@color/colorQuestionText"
        android:background="@drawable/choice_background"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/choice2_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice1_button"
        app:layout_constraintBottom_toTopOf="@+id/choice3_button"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColor="@color/colorQuestionText"
        android:background="@drawable/choice_background"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/choice3_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice2_button"
        app:layout_constraintBottom_toTopOf="@+id/choice4_button"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColor="@color/colorQuestionText"
        android:background="@drawable/choice_background"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/choice4_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice3_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColor="@color/colorQuestionText"
        android:background="@drawable/choice_background"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>